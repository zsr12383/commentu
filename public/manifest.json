{
  "manifest_version": 3,
  "name": "commentu",
  "description": "This is a Chrome extension that shows the most popular comment indicating the current time",
  "version": "1.0",
  "externally_connectable": {
    "matches": [
      "*://*.google.com/*"
    ]
  },
  "action": {
    "default_icon": "bridge48.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "bridge16.png",
    "48": "bridge48.png",
    "128": "bridge128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/vendor.js"
      ]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webNavigation",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
