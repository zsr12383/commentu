{
  "manifest_version": 3,
  "name": "commentu",
  "description": "This is a Chrome extension that shows the most popular comment indicating the current time",
  "version": "1.0",
  "externally_connectable": {
    "matches": [
      "*://*.google.com/*"
    ]
  },
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webNavigation",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/watch?*"
  ]
}
